@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication


<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <button class="nav-link btn btn-link" @onclick="BeginSignOut">Log out</button>
    </Authorized>
    <NotAuthorized>
        <MudButton href="authentication/login" Variant="Variant.Text" style="width:100vw; margin-top: 30px" Class="d-flex justify-center buddy-background">
            <MudImage Src="images/gmail.svg"></MudImage> <span style="margin-left: 10px" class="white-text">Continue with Google</span>
        </MudButton>
    </NotAuthorized>
</AuthorizeView>

